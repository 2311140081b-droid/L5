<% @tweets.each do |t| %>
  <%= t.message %>
  <%= t.like_users.count %>
  <p>
  <%= link_to '削除', "/tweets/#{t.id}", data: {turbo_method: :delete} %>
  <%= link_to 'いいね', likes_path(tweet_id: t.id), data: {turbo_method: :post} %>
  <%= link_to 'いいね削除', likes_path(tweet_id: t.id), data: {turbo_method: :delete} %>
  </p>
<% end %>

<% if session[:login_uid] %>
  <p><%= link_to '新規追加', '/tweets/new' %></p>
  <%= link_to 'ユーザ登録', "/users" %><br>
  <%= link_to "ログアウト", top_logout_path %><br>
  ログイン中UID: <%= session[:login_uid] %>
  <%= link_to "プロフィール",profile_path(User.find_by(uid:session[:login_uid]).id) %>

<% else %>
  <%= link_to "ログイン", top_main_path %><br>
<% end %>
